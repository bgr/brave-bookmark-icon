{
  "name": "Just A Bookmark Icon",
  "version": "1.0",
  "manifest_version": 2,
  "description": "So you can have a bookmark icon on the right of the address bar like you used to in Chrome",
  "icons": {
    "128": "images/extension.png"
  },
  "permissions": [
    "bookmarks",
    "tabs",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/star-off.png"
  }
}